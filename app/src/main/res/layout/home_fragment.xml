<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/tvHintSearch"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:padding="10dp"
                android:gravity="center"
                android:hint="@string/hint_search"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvTTVideosMA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvSearch"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="Videos món ăn"
            android:background="@color/white"
            android:textSize="21sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleviewVideosMoAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTTVideosMA"
            android:background="@color/white"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/tvTTMALamDep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycleviewVideosMoAn"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="Món ăn làm đẹp da"
            android:background="@color/white"
            android:textSize="21sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleviewLamDep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTTMALamDep"
            android:background="@color/white"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/tvTTMAChoTre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycleviewLamDep"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="Món ăn cho Trẻ"
            android:background="@color/white"
            android:textSize="21sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleviewChoTre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTTMAChoTre"
            android:background="@color/white"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/tvTTMATotChoSucKhoe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycleviewChoTre"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="Tốt cho sức khỏe"
            android:background="@color/white"
            android:textSize="21sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleviewTotChoSucKhoe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTTMATotChoSucKhoe"
            android:background="@color/white"
            android:orientation="horizontal"
            />

        <TextView
            android:id="@+id/tvTTMAYT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycleviewTotChoSucKhoe"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:background="@color/white"
            android:text="Món ăn được yêu thích "
            android:textSize="21sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMonAnYeuThich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTTMAYT"
            android:background="@color/white"
            android:orientation="horizontal"
            />

        <TextView
            android:id="@+id/tvTTTatCaMA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rvMonAnYeuThich"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:background="@color/white"
            android:text="Tất cả món ăn"
            android:textSize="21sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTatCaMonAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTTTatCaMA"
            android:background="@color/white"
            android:orientation="horizontal"
            />

    </RelativeLayout>
    <!--    android:scrollbars="horizontal"-->
</ScrollView>