<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/asd2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBright"
    android:visibility="visible">

    <ImageView
        android:id="@+id/imgTitleSW"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignRight="@id/tvTitleSW1"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/logodaubep" />

    <TextView
        android:id="@+id/tvTitleSW1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/rubik_medium"
        android:paddingLeft="50dp"
        android:text="Mỹ Thực "
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvTitleSW2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitleSW1"
        android:layout_centerInParent="true"
        android:fontFamily="@font/rubik_regular"
        android:gravity="right"
        android:paddingRight="60dp"
        android:text="Việt Nam"
        android:textColor="#FFFFFF"
        android:textSize="45sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cisw1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/tvTitleSW2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/asw1" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cisw2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/tvTitleSW2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@drawable/asw2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cisw3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/tvTitleSW2"
        android:layout_alignRight="@+id/tvTitleSW2"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:background="#00000000"
        android:src="@drawable/asw3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cisw2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Loading "
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <com.agrawalsuneet.dotsloader.loaders.TashieLoader
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            app:tashieloader_animDelay="200"
            app:tashieloader_animDur="1000"
            app:tashieloader_dotsColor="@color/colorWhite"
            app:tashieloader_dotsDist="5dp"
            app:tashieloader_dotsRadius="2dp"
            app:tashieloader_interpolator="@android:anim/accelerate_interpolator"
            app:tashieloader_noOfDots="3" />

    </LinearLayout>


</RelativeLayout>